<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springbootdemo.dao.SysRoleMapper">
    <resultMap id="BaseResultMap" type="com.example.springbootdemo.pojo.dto.SysRole">
        <!--@mbg.generated-->
        <!--@Table sys_role-->
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="role_name" jdbcType="VARCHAR" property="roleName"/>
        <result column="role_code" jdbcType="VARCHAR" property="roleCode"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="create_by" jdbcType="VARCHAR" property="createBy"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_by" jdbcType="VARCHAR" property="updateBy"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <resultMap id="ResultIncludeUserMap" type="com.example.springbootdemo.pojo.dto.SysRole">
        <!--@mbg.generated-->
        <!--@Table sys_role-->
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="role_name" jdbcType="VARCHAR" property="roleName"/>
        <result column="role_code" jdbcType="VARCHAR" property="roleCode"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="create_by" jdbcType="VARCHAR" property="createBy"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_by" jdbcType="VARCHAR" property="updateBy"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <collection property="users" column="id" javaType="java.util.ArrayList"
                    ofType="com.example.springbootdemo.pojo.dto.SysUser"
                    select="com.example.springbootdemo.dao.SysUserMapper.getSysUserByRoleId"/>
    </resultMap>

    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id,
        role_name,
        role_code,
        description,
        create_by,
        create_time,
        update_by,
        update_time
    </sql>

    <select id="getSysRoleByUserId" resultMap="BaseResultMap">
        select sr.id,
               sr.role_name,
               sr.role_code,
               sr.description,
               sr.create_by,
               sr.create_time,
               sr.update_by,
               sr.update_time
        from sys_user_role sur
                 left join sys_role sr on sur.role_id = sr.id
        where sur.user_id = #{userId}
    </select>

    <select id="getAllRoleIncludeUser" resultMap="ResultIncludeUserMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role
    </select>

    <select id="getRoleByUserId" resultMap="BaseResultMap">
        select sr.id,
               sr.role_name,
               sr.role_code,
               sr.description,
               sr.create_by,
               sr.create_time,
               sr.update_by,
               sr.update_time
        from sys_user_role sur
                 left join sys_role sr on sur.role_id = sr.id
        where sur.user_id = #{userId}
    </select>
</mapper>